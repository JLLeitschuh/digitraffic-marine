                    <!--&lt;!&ndash; This ensures that even if we are not connected to scm the revision is generated &ndash;&gt;-->
                    <!--<revisionOnScmFailure />-->
                    <!--<format>{0}</format>-->
                    <!--&lt;!&ndash;<format>{0,date,yyyy-MM-dd_HH:mm:ss}</format>&ndash;&gt;-->
